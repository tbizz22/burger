<body>
    <header>
        <div class="navbar-fixed">
            <nav>
                <div class="nav-wrapper">
                    <a href="/" class=" brand-logo fontNunito">Burger Tracker</a>
                    <ul class="right hide-on-med-and-down">
                        <li>
                            <a href="/">
                                <i class="material-icons left">home</i>
                            </a>
                        </li>
                    </ul>
                </div>
            </nav>
        </div>
    </header>

    <main>
        <div class="col s12 center-align">
            <img class="mh" src="../assets/img/burger.png" alt=""></img>
        </div>
        <div class="container">
            <div class="row">
                <form>
                    <div class="input-field offset-s1 col s9">
                        <textarea id="newBurger" class="materialize-textarea"></textarea>
                        <label for="newBurger">Add a burger</label>
                    </div>
                    <div class="col s2">
                        <button class="btn waves-effect waves-light" type="submit" name="action">Submit
                            <i class="material-icons right">send</i>
                        </button>
                    </div>
                </form>
            </div>
            <div class="row">
                <div class="col m6">
                    <h3>Burgers to Eat</h3>
                    <div id="burger$">
                        id: Bacon Burger
                    </div>
                    <div id="burger$">
                        id: Bacon Burger
                    </div>
                </div>
                <div class="col m6">
                    <h3>Burgers to Eat</h3>

                </div>

            </div>
        </div>
    </main>


    <footer class="page-footer">
